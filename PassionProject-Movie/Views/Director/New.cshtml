
@{
    ViewBag.Title = "New";
}

<h2>Add New Director</h2>

<form action="/Director/Create" method="POST">
    <div>
        <label>First Name:</label> <input type="text" name="DirectorFName" />
    </div>
    <div>
        <label>Last Name:</label> <input type="text" name="DirectorLName" />
    </div>
    <div>
        <label>Director Bio:</label>
    </div>
    <div>
        <textarea name="DirectorBio" rows="5" cols="30" maxlength="500" placeholder="Type here..."></textarea>
    </div>
    <div>
        <input type="submit" value="Add Director" />

    </div>
</form>

