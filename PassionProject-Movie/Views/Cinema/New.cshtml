
@{
    ViewBag.Title = "New";
}

<h2>Add New Cinema</h2>

<form action="/Cinema/Create" method="POST">
    <div>
        <label>Name:</label> <input type="text" name="CinemaName" />
    </div>
    <div>
        <label>Location:</label>
    </div>
    <div>
        <textarea name="CinemaLocation" rows="5" cols="30" maxlength="500" placeholder="Type here..."></textarea>
    </div>
    <div>
        <input type="submit" value="Add Cinema" />

    </div>
</form>

