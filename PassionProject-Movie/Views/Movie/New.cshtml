@model IEnumerable<PassionProject_Movie.Models.DirectorDto>
@{
    ViewBag.Title = "Create";
}

<h2>Add New Movie</h2>

<form action="/Movie/Create" method="POST">
    <div>
        <label>Name:</label> <input type="text" name="MovieName" />
    </div>
    <div>
        <label>Director:</label>

        <select name="DirectorID">
            @foreach (var director in Model)
            {
                <option value="@director.DirectorID">@director.DirectorFName @director.DirectorLName</option>

            }
        </select>
    </div>
    <div>
        <label>Release Date:</label> <input type="date" name="ReleaseDate" />
    </div>
    <div>
        <label>Introduction:</label>
    </div>
    <div>
        <textarea name="MovieIntro" rows="5" cols="30" maxlength="500" placeholder="Type here..."></textarea>
    </div>
    <div>
        <input type="submit" value="Add Movie" />

    </div>
</form>
